<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/main_background"
    tools:context=".TabletActivity" >

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/actionBarHeight" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <ScrollView
                android:id="@+id/scrollView_main"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/page_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tabMar"
                        android:layout_marginRight="@dimen/tabMar"
                        android:layout_marginTop="@dimen/tabMar"
                        android:layout_weight="33"
                        android:gravity="left"
                        android:text="Home"
                        android:textColor="@color/home_colour"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:id="@+id/loading_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="33"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="4sp"
                        android:visibility="gone" >

                        <ProgressBar
                            android:id="@+id/progressBar1"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp" />

                        <TextView
                            android:id="@+id/loading_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:text="Loading"
                            android:textColor="@color/black_20"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/story_lll"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="33"
                        android:animateLayoutChanges="true"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/tablet_lld1"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/tabMar"
                            android:animateLayoutChanges="true"
                            android:layout_marginRight="@dimen/tabMar"
                            android:layout_marginTop="@dimen/tabMar"
                            android:layout_weight="33"
                            android:orientation="vertical" >
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tablet_lld2"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:animateLayoutChanges="true"
                            android:layout_marginRight="@dimen/tabMar"
                            android:layout_marginTop="@dimen/tabMar"
                            android:layout_weight="33"
                            android:orientation="vertical" >
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tablet_lld3"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:animateLayoutChanges="true"
                            android:layout_marginRight="@dimen/tabMar"
                            android:layout_marginTop="@dimen/tabMar"
                            android:layout_weight="33"
                            android:orientation="vertical"
                            android:visibility="gone" >
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/news_story_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:animateLayoutChanges="true"
        android:visibility="gone" >

        <FrameLayout
            android:id="@+id/back_dark_underlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" >
        </FrameLayout>

        <ScrollView
            android:id="@+id/storyScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginBottom="@dimen/articleMarg"
            android:layout_marginLeft="@dimen/articleMargHor"
            android:layout_marginRight="@dimen/articleMargHor"
            android:layout_marginTop="@dimen/actionBarHeight"
            android:background="@color/white" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/story_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/story_newsImage"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="false"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/category_stub_news" />

                    <TextView
                        android:id="@+id/story_headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="BREAKING NEWS!: Boar mobile app now available for Android!"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/story_ll_root"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical" >

                        <!--
                         <WebView
                        android:id="@+id/story_web_view"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                        -->

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/action_bar_layout" />

</FrameLayout>